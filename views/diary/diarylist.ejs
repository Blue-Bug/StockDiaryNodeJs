<!doctype html>
<html lang="kr">

<head>
  <%-include ('../header.ejs')%>
  <style>
    body{
      background-color: #495057;
    }
    div.left{
      text-align: left;
      width: 50%;
      float: left;
    }
    div.right{
      text-align: right;
      width: 50%;
      float: left;
    }
  </style>
</head>

<body>
  <%-include ('../sidebar.ejs')%>
  <div class="container">
    <div class="overflow-auto">
      <div class="table-responsive">
        <% let index = 1;%>
        <table class="table table-bordered" >
          <thead class ="table-light align-middle" align="center">
            <th scope="col">#</th>
            <th scope="col">생성 날짜</th>
            <th scope="col">수정 날짜</th>
            <th scope="col">작업</th>
          </thead>
          <tbody class="text-white">
            <% diary.forEach((it) => {%>
            <form action = "/diary/delete" method="POST">
              <tr>
                <td align="center"><%= index++ %></td>
                <td align="center"><%= it.created_at %></td>
                <td align="center"><%= it.updated_at %></td>
                <td align="center">
                  <div class="btn-group" role="group">
                    <a href="/diary?created_at=<%= it.created_at %>" class="btn btn-warning"><strong>조회</strong></a>
                    <input hidden type="text" name="created_at" value="<%= it.created_at %>">
                    <button type="submit" class="btn btn-danger"><strong>삭제</strong></button>
                  </div>
                </td>
              </tr>
            </form>
            <%});//end for%>
          </tbody>   
        </table>
        <div class= left>
          <strong class="text-white">총 <%= index - 1%>개</strong>
        </div>
        <div class= right>
          <a href="/diary/create" class="btn btn-success"><strong>일지 쓰기</strong></a>
        </div>
      </div>
    </div>
  </div>
  
  

</body>

</html>